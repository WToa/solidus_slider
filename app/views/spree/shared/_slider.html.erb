<% if slider.size > 0 %>
    <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="f">
        <ol class="carousel-indicators">
            <% slider.each_with_index do |slide, index| %>
                <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= index.zero? ? 'active' : ''%>"></li>
            <%end%>
        </ol>
        <div class="carousel-inner">
            <% slider.each_with_index do |slide, index| %>
                <div class="carousel-item <%= index.zero? ? 'active' : '' %>">
                    <%= link_to image_tag(slide.slide_image.url, alt: slide.slide_caption, class:'img-fluid d-block w-100'), url_for(slide.slide_link) %>
                </div>
            <%end%>
        </div>
        <!-- Controls -->
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<%end%>